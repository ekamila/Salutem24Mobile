<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/consulta_programada"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ConsultaPragramadaFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/background_blue">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="20dp">

                <TextView
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowRadius="10"
                    android:shadowDx="2"
                    android:shadowDy="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mis Consultas"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/ly_filtros"
                    android:background="@drawable/background_filtro"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical"
                    android:elevation="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:id="@+id/tv_cerrarFiltro"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="X"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:background="@drawable/cercle_primary_background"
                        />

                    <LinearLayout
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:text="Especialidad:"
                            android:textColor="@color/colorInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal"
                            android:elevation="2dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:background="@drawable/background_complete_editext"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginLeft="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_especialidad"
                                />

                            <Spinner
                                android:paddingLeft="0dp"
                                android:paddingRight="15dp"
                                android:id="@+id/sp_especialidad"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:text="Estado:"
                            android:textColor="@color/colorInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal"
                            android:elevation="2dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:background="@drawable/background_complete_editext"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginLeft="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_estado"
                                />

                            <Spinner
                                android:paddingLeft="0dp"
                                android:paddingRight="15dp"
                                android:id="@+id/sp_estado"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:text="Ordenar:"
                            android:textColor="@color/colorInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal"
                            android:elevation="2dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:background="@drawable/background_complete_editext"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_marginLeft="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_ordenar" />
                            <Spinner
                                android:paddingLeft="0dp"
                                android:paddingRight="15dp"
                                android:id="@+id/sp_ordenar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--LinearLayout
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:text="Fecha:"
                            android:textColor="@color/colorInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/etFechaConsulta"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="5dp"
                            android:drawableLeft="@drawable/ic_fecha"
                            android:background="@drawable/background_complete_editext"
                            android:hint="Fecha de consulta"
                            android:drawablePadding="8dp"
                            android:textColor="@color/colorInput"
                            android:paddingLeft="15dp"
                            android:inputType="text"
                            android:elevation="2dp"
                            android:textColorHint="@color/colorHint" />
                    </LinearLayout-->
                    <Button
                        android:shadowColor="@color/colorOrangeDark"
                        android:shadowRadius="10"
                        android:shadowDx="2"
                        android:shadowDy="5"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:id="@+id/btn_buscar"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Buscar"
                        android:textColor="#fff"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/boton_primary_sm" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:elevation="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/background_white"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:paddingTop="30dp">

                <Button
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:shadowColor="@color/colorOrangeDark"
                    android:shadowRadius="10"
                    android:shadowDx="2"
                    android:shadowDy="5"
                    android:id="@+id/btn_editarFiltros"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Editar Filtros"
                    android:textColor="#fff"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/boton_primary_sm" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp">
                    <!--LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha: "
                            android:textColor="@color/colorInput"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tvFechaMiConsulta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="04/08/2020"
                            android:textColor="@color/colorOrangeDark"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado: "
                            android:textColor="@color/colorInput"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_estado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pendiente"
                            android:textColor="@color/colorOrangeDark"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Orden: "
                            android:textColor="@color/colorInput"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_orden"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mas recientes"
                            android:textColor="@color/colorOrangeDark"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorHint"/>

                <LinearLayout
                    android:id="@+id/content_consultas"
                    android:layout_marginBottom="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>