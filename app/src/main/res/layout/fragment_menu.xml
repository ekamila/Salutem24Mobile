<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MenuFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_menu"
        android:background="@drawable/background_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/background_blue">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="0dp"
                    android:shadowDx="2"
                    android:shadowDy="5"
                    android:shadowRadius="10"
                    android:src="@drawable/logomeditec" />
                <!--<TextView
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowRadius="10"
                    android:shadowDx="2"
                    android:shadowDy="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salutem24"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="35sp" />-->
                <TextView
                    android:shadowColor="@color/colorPrimaryDark"
                    android:shadowDx="2"
                    android:shadowDy="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona un tipo de cita"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:elevation="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/background_white"
                android:paddingRight="50dp"
                android:paddingLeft="40dp"
                android:paddingBottom="40dp"
                android:paddingTop="40dp">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Quiero?"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="20dp"
                    android:textSize="25dp"/>


                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="@drawable/background_top_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginBottom="0dp"
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:src="@drawable/videollamada_va" />
                    </LinearLayout>


                    <LinearLayout
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:layout_marginTop="-18dp"
                        android:background="@drawable/background_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/colorWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Programar Cita"
                            />
                        <Button
                            android:id="@+id/btn_especialidades"
                            android:layout_marginBottom="10dp"
                            android:elevation="6dp"
                            android:textSize="12sp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/colorWhite"
                            android:background="@drawable/boton_primary_xs"
                            android:text="Ver Especialidades"
                            android:layout_width="180dp"
                            android:layout_height="30dp"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="@drawable/background_top_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginBottom="0dp"
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:src="@drawable/inmediata_va" />

                    </LinearLayout>


                    <LinearLayout
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:layout_marginTop="-18dp"
                        android:background="@drawable/background_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/colorWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recibir atención inmediata"
                            />

                        <Button
                            android:id="@+id/btn_atencion"
                            android:layout_marginBottom="10dp"
                            android:elevation="6dp"
                            android:textSize="12sp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/colorWhite"
                            android:background="@drawable/boton_primary_xs"
                            android:text="Atenderme ahora"
                            android:layout_width="180dp"
                            android:layout_height="30dp"/>


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="@drawable/background_top_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginBottom="0dp"
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:src="@drawable/programadas_va" />

                    </LinearLayout>


                    <LinearLayout
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:layout_marginTop="-18dp"
                        android:background="@drawable/background_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/colorWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver mis consultas"
                            />

                        <Button
                            android:id="@+id/btn_consultas"
                            android:layout_marginBottom="10dp"
                            android:elevation="6dp"
                            android:textSize="12sp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/colorWhite"
                            android:background="@drawable/boton_primary_xs"
                            android:text="Ver Consultas"
                            android:layout_width="180dp"
                            android:layout_height="30dp"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>